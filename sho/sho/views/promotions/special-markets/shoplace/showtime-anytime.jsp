
{{!--
    # shoplace home
  --}}
  
  {{< layouts/shoplace }}
	{{$classnames}}shoplace-showtime-anytime{{/classnames}} 
	{{$pagename}}Showtime Anytime{{/pagename}}
	{{$pageurl}}showtime-anytime{{/pageurl}}
		{{$header}} 
			<div class="masthead__img--showtime-anytime"></div>
			<h3 class="masthead__copy">
				{{subHeadline}}
			</h3>
		{{/header}}
    {{$content}}
      <section class="container__inner">
				<section class="section hero">
					<img class="hero-img" src="https://www.sho.com/assets/images/shoplace/shoplace-showtime-anytime-hero.png">
				</section>      
				<div class="row">
						<div class="col-8--from-medium anytime-callout__section">
							<h5 class="anytime-callout__title">Download</h5>
							<p class="anytime-callout__body">Your customers can download full episodes and movies to their favorite mobile devices to watch offline later.</p>
							<h5 class="anytime-callout__title">Watch Anywhere</h5>
							<p class="anytime-callout__body">Your customers can watch SHOWTIME on their computer, tablet, phone, TV streaming devices and game consoles.</p>
							<h5 class="anytime-callout__title">Unlimited Access</h5>
							<p class="anytime-callout__body">Award Winning Original Series, Hollywood Hits, Sports, Comedy, Documentaries and much more.</p>
							<h5 class="anytime-callout__title">Live + On Demand</h5>
							<p class="anytime-callout__body">Customers can watch what's currently airing live on SHOWTIME EAST and SHOWTIME WEST or enjoy unlimited access to their SHOWTIME favorites whenever they want.</p>
						</div>
						<div class="col-4--from-medium anytime__wtw">
							<h5 class="anytime-callout__title">Ways to Watch</h5>
							<h5 class="anytime__wtw__sub-title">On the Web:</h5>
							<p class="anytime__wtw__device">ShowtimeAnytime.com</p>
							<h5 class="anytime__wtw__sub-title">Download the Mobile Apps:</h5>
							<p class="anytime__wtw__device">Apple App Store</p>
							<p class="anytime__wtw__device">Amazon Devices</p>        
							<p class="anytime__wtw__device">Google Play</p>
							<h5 class="anytime__wtw__sub-title">Stream to TV:</h5>
							<p class="anytime__wtw__device">Amazon Fire TV</p>
							<p class="anytime__wtw__device">Android TV</p>
							<p class="anytime__wtw__device">Apple TV</p>
							<p class="anytime__wtw__device">Chromecast</p>
							<p class="anytime__wtw__device">LG Smart TV</p>
							<p class="anytime__wtw__device">Roku</p>
							<p class="anytime__wtw__device">Samsung Smart TV</p>
							<p class="anytime__wtw__device">Xbox One</p>
						</div>
				</div>
			</section>
    {{/content}}
  {{/ layouts/shoplace }}
